---
import Layout from "@layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <section class="py-24 md:py-32">
    <div class="max-w-4xl mx-auto px-6">
      <h1 class="mb-8 font-serif text-6xl font-bold text-white">
        Directory
      </h1>
      <p class="text-lg text-neutral mb-12">
        This is a new page where we can experiment and play around with different ideas.
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-black/50 border border-neutral/20 rounded-2xl p-6">
          <h2 class="text-2xl font-semibold text-white mb-4">Section 1</h2>
          <p class="text-neutral">Add your content here...</p>
        </div>
        
        <div class="bg-black/50 border border-neutral/20 rounded-2xl p-6">
          <h2 class="text-2xl font-semibold text-white mb-4">Section 2</h2>
          <p class="text-neutral">Add your content here...</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
