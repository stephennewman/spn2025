---
import { SITE_CONTENT } from "../config/index.ts";

const experience = SITE_CONTENT.experience;
---

<section id="experience" class="py-24 bg-white/[0.02]">
  <div class="max-w-5xl mx-auto px-6">
    <h2
      class="font-serif text-4xl md:text-5xl font-bold tracking-tighter text-white mb-16"
    >
      Experience
    </h2>

    <div>
      {
        experience.map((role) => (
          <div class="relative pl-8 pb-12 last:pb-0 border-l border-white/10">
            <div class="absolute left-0 top-1.5 -translate-x-1/2 w-2.5 h-2.5 rounded-full bg-primary" />

            <div class="flex flex-col md:flex-row md:items-baseline md:gap-4 mb-1">
              <h3 class="text-xl font-bold text-white font-serif">
                {role.company}
              </h3>
              <span class="text-sm text-neutral/60">{role.location}</span>
            </div>

            <div class="flex flex-col md:flex-row md:items-baseline md:gap-4 mb-4">
              <p class="text-gradient font-medium">{role.position}</p>
              <span class="text-sm text-neutral font-mono">
                {role.startDate} â€” {role.endDate}
              </span>
            </div>

            {Array.isArray(role.summary) ? (
              <ul class="space-y-2">
                {role.summary.map((s) => (
                  <li class="text-neutral text-base leading-relaxed">{s}</li>
                ))}
              </ul>
            ) : (
              <p class="text-neutral text-base leading-relaxed">
                {role.summary}
              </p>
            )}
          </div>
        ))
      }
    </div>
  </div>
</section>
