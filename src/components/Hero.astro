---
import { SITE_CONTENT } from "../config/index.ts";

const { name, title, summary } = SITE_CONTENT.hero;
const metrics = SITE_CONTENT.metrics;
---

<section class="relative py-24 md:py-32 lg:py-40" id="hero">
  <div class="max-w-5xl mx-auto px-6">
    <p
      class="text-sm uppercase tracking-[0.2em] text-gradient font-medium mb-8"
    >
      {title}
    </p>

    <h1
      class="font-serif text-6xl sm:text-7xl md:text-8xl lg:text-9xl font-bold tracking-tightest text-white leading-none"
    >
      Stephen<br />Newman
    </h1>

    <p class="max-w-2xl text-lg text-neutral mt-10 leading-relaxed">
      {summary}
    </p>

    <div
      class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-16 pt-16 border-t border-white/10"
    >
      {
        metrics.map((m) => (
          <div>
            <p class="text-3xl md:text-4xl font-bold text-white font-serif tracking-tight">
              {m.value}
            </p>
            <p class="text-sm text-neutral mt-1">{m.label}</p>
          </div>
        ))
      }
    </div>

    <div class="mt-12">
      <a
        class="inline-block rounded-full bg-gradient px-8 py-4 text-sm font-medium text-[#fff] hover:opacity-90 transition-opacity"
        href="https://calendly.com/stephen-krezzo/connect-with-stephen-30-mins"
        target="_blank"
        rel="noopener noreferrer"
      >
        Schedule Meeting
      </a>
    </div>
  </div>
</section>
