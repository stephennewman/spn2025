---
import { SITE_CONTENT } from "../config/index.ts";

const education = SITE_CONTENT.education;
---

<section id="education" class="py-24">
  <div class="max-w-5xl mx-auto px-6">
    <h2
      class="font-serif text-4xl md:text-5xl font-bold tracking-tighter text-white mb-12"
    >
      Education
    </h2>

    <div class="space-y-6">
      {
        education.map((e) => (
          <div>
            <h3 class="text-xl font-bold text-white font-serif">
              {e.degree}, {e.field}
            </h3>
            <p class="text-neutral mt-1">
              {e.school}{" "}
              <span class="text-white/20 mx-2">Â·</span> {e.year}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
