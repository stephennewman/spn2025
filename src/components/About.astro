---
import { SITE_CONTENT } from "../config/index.ts";

const { description, image } = SITE_CONTENT.about;
const { name } = SITE_CONTENT.hero;
---

<section id="about" class="py-24">
  <div class="max-w-5xl mx-auto px-6">
    <h2
      class="font-serif text-4xl md:text-5xl font-bold tracking-tighter text-white mb-12"
    >
      About
    </h2>

    <div class="flex flex-col md:flex-row gap-12 items-start">
      <p class="text-lg text-neutral leading-relaxed flex-1">
        {description}
      </p>
      <div class="flex-shrink-0">
        <img
          class="rounded-2xl grayscale hover:grayscale-0 transition-all duration-500 object-cover w-64 h-64"
          src={image}
          alt={name}
        />
      </div>
    </div>
  </div>
</section>
