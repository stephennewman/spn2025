---
import { SITE_CONTENT } from "../config/index.ts";

const highlights = SITE_CONTENT.highlights;
---

<section id="highlights" class="py-24">
  <div class="max-w-5xl mx-auto px-6">
    <h2
      class="font-serif text-4xl md:text-5xl font-bold tracking-tighter text-white mb-4"
    >
      Track Record
    </h2>
    <p class="text-lg text-neutral mb-16">
      Influential roles in four acquisitions and an IPO.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {
        highlights.map((h) => (
          <div class="group border border-white/10 rounded-2xl p-8 hover:border-primary/30 transition-all duration-300">
            <span class="text-xs font-medium uppercase tracking-[0.15em] text-neutral/60">
              {h.period}
            </span>
            <h3 class="text-2xl font-bold text-white font-serif mt-4 mb-1">
              {h.company}
            </h3>
            <p class="text-gradient font-semibold text-lg mb-4">{h.outcome}</p>
            <p class="text-sm text-neutral leading-relaxed">{h.highlight}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
